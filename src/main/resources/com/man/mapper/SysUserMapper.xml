<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.man.mapper.SysUserMapper">
    <select id="getSystemUserByName" resultType="com.man.entity.Security.SysUser">
        select * from sys_user where username = #{userName}
    </select>
    <select id="getSystemUserByUserId" resultType="com.man.entity.Security.SysUser">
        select * from sys_user where id = #{userId}
    </select>
</mapper>
